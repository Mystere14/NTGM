{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ntgm",
  "version": "0.1.0",
  "identifier": "com.nican.ntgm",
  "build": {
  "beforeBuildCommand": "npm run build --prefix src",
  "beforeDevCommand": "npm run dev --prefix src",
  "devUrl": "http://localhost:5173",
  "frontendDist": "../src/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ntgm",
        "width": 800,
        "height": 600,
        "resizable": false,
        "maximizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png"
    ]
  }
}
